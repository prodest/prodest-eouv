@model IEnumerable<Prodest.EOuv.UI.Apresentacao.DespachoManifestacaoViewModel>

@{
    ViewData["Title"] = "Acompanhar Despachos";
}

<div class="container-fluid p-0">
    <div class="row">
        <div id="app" class="col-12">

            <section class="mb-4">
                <div class="card">
                    <div class="card-header">
                        Despachos realizados para a Manifestação: @TempData["idManifestacao"]
                    </div>
                    <div class="card-body">
                        <a class="btn btn-primary btn-sm float-end" href="/Despacho/NovoDespacho"><i class="fas fa-plus"></i> Novo Despacho</a>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.ProtocoloEdocs)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.DataSolicitacaoDespacho)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.PrazoResposta)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.DataRespostaDespacho)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.SituacaoDespacho.DescSituacaoDespacho)
                                    </th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProtocoloEdocs)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataSolicitacaoDespacho)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrazoResposta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataRespostaDespacho)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SituacaoDespacho.DescSituacaoDespacho)
                                        </td>
                                        <td>
                                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.IdDespachoManifestacao"><i class="fas fa-exchange-alt"></i></a>
                                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdDespachoManifestacao"><i class="fas fa-times"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr />
                        <a class="btn btn-primary btn-sm" href="/Resposta/ResponderManifestacao/583"><i class="fas fa-paper-plane"></i> Responder Manifestação</a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>