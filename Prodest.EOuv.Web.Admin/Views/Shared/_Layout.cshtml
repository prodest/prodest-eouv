<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EOuv</title>

    <!-- MDB -->
    <link rel="stylesheet" href="~/dist/mdb/css/mdb.min.css" />
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/dist/mdb/css/admin.css" />
    <link rel="stylesheet" href="~/dist/fontawesome-free-5.15.3-web/css/all.min.css" />

    <script defer src="~/dist/vue-3.2.6/vue.global.js"></script>

    <script defer src="~/scripts/common/fetchData.js" asp-append-version="true"></script>
    <script defer src="~/scripts/common/bootstrapHelper.js" asp-append-version="true"></script>
    <script defer src="~/scripts/common/mascaras.js" asp-append-version="true"></script>
    <script defer src="~/scripts/common/utils.js" asp-append-version="true"></script>
    <script defer src="~/scripts/common/vue/vueBase.js" asp-append-version="true"></script>
    <script defer src="~/scripts/common/vue/vueReusaveis.js" asp-append-version="true"></script>
    <script defer src="~/scripts/common/mensagemSistema.js" asp-append-version="true"></script>

    <script defer src="/scripts/app/navbar/NavBarUsuario.js"></script>

    <!--Main layout-->
    <!-- MDB -->
    <script type="text/javascript" src="~/dist/mdb/js/mdb.min.js"></script>
    <!-- Custom scripts -->
    <!--
    ...
    -->

    @await RenderSectionAsync("Scripts", required: false)

    @await RenderSectionAsync("modules", required: false)
</head>
<body>

    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
    @functions{
        public string GetAntiXsrfRequestToken()
        {
            return Xsrf.GetAndStoreTokens(Context).RequestToken;
        }
    }
    <input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken" value="@GetAntiXsrfRequestToken()">

    <!--Main Navigation-->
    <header>
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
            <div class="position-sticky">
                <div class="list-group list-group-flush mx-3 mt-4">
                    <a href="/" title="Sistema Eletrônico de Ouvidoria" class="list-group-item list-group-item-action list-group-item-info py-2 ripple" aria-current="true">
                        <i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Home</span>
                    </a>
                    <a href="/Despacho" title="Despachos" class="list-group-item list-group-item-action list-group-item-info py-2 ripple">
                        <i class="fas fa-chart-area fa-fw me-3"></i><span>Despachos </span>
                    </a>
                    <a href="/Despacho/Add" title="Novo Despacho" class="list-group-item list-group-item-action list-group-item-info py-2 ripple active">
                        <i class="fas fa-lock fa-fw me-3"></i><span>Novo Despacho</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- Sidebar -->
        <!-- Navbar -->
        <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-info fixed-top">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#sidebarMenu"
                        aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Brand -->
                <a class="navbar-brand font-weight-bold" href="#">
                    E-OUV
                </a>
                <!-- Search form -->
                <form class="d-none d-md-flex input-group w-auto my-auto">
                    <input autocomplete="off" type="search" class="form-control rounded"
                           placeholder='Search (ctrl + "/" to focus)' style="min-width: 225px" />
                    <span class="input-group-text border-0"><i class="fas fa-search"></i></span>
                </form>

                <!-- Right links -->
                <ul class="navbar-nav ms-auto d-flex flex-row">
                    <!-- Avatar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center" href="#"
                           id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                            <img src="https://mdbootstrap.com/img/Photos/Avatars/img (31).jpg" class="rounded-circle" height="22"
                                 alt="" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="#">Meu Perfil</a></li>
                            <li><a class="dropdown-item" href="#">Sair</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <!--Main Navigation-->
    <!--Main layout-->
    <main style="margin-top: 58px">
        <div class="container pt-4">
            <h5 class="mb-3"><strong>@ViewData["Title"]</strong></h5>
            @RenderBody()
        </div>
    </main>
    <!--Main layout-->
    @*Vue Templates*@
    @await Html.PartialAsync("_NavBarTemplate")
    @RenderSection("templates", false)
</body>
</html>